<% layout("/layouts/boilerplate") %>

    <body>
       
        <div class="row mt-3">
            <div class="col-8 offset2">
                <h3>Editing Your list</h3>

                <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <lable for="title" class="form-label">Title</lable>
                        <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required>
                        <div class="valid-feedback">title  looks like good</div>
                        
                    </div>

                    <div class="mb-3">
                        <lable for="description" class="form-label">Description</lable>
                        <textarea name="listing[description]" type="text"
                            class="form-control" required><%=listing.description%></textarea>
                    </div>

                    <div class="mb-3 old-image">
                        <p>orignal listing image</p>
                        <img src="<%=originalImageUrl%>">
                        
                    </div>

                    <div class="mb-3">
                        <lable for="image" class="form-label">update Image</lable>
                        <input name="listing[image]" type="file" class="form-control">
                        
                    </div>
       
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <lable for="price" class="form-label">Price</lable>
                            <input name="listing[price]" value="<%=listing.price%>" class="form-control" required>
                            <div class="invalid-feedback">price should be right</div>
                        </div>
    
                        <div class="mb-3 col-md-8">
                            <lable for="country" class="form-label">Country</lable>
                            <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required>
                            <div class="invalid-feedback">country name should be right</div>
                        </div>
                    </div>
                    

                    <div class="mb-3">
                        <lable for="location" class="form-label">location</lable>
                        <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control" required>
                        <div class="invalid-feedback">location name should be right</div>
                    </div>

                    

                    <br>
                    <br>
                    <button class="btn btn-dark btn-edit">edit</button>
                    <br>
                    <br>
                </form>
            </div>
        </div>
        
    </body>