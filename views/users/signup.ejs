<% layout("/layouts/boilerplate") %>
<body>
<div class="row mt-3">
    <h1 class="col-6 offset-3">signup for wanderlust</h1>
<div class="col-6 offset-3">
    <form method="POST" action="/signup" class="needs-validation" novalidate>
        <div class="mb-3">
            <lable for ="username" class="username">username</lable>
            <input name="username"
            id="username" 
            type="text" 
            class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
            <lable for ="email" class="email">email</lable>
            <input name="email"
            id="email" 
            type="email" 
            class="form-control" required>
        </div>

        <div class="mb-3">
            <lable for ="password" class="password">password</lable>
            <input name="password"
            id="password" 
            type="password" 
            class="form-control" required>
        </div>

        <button class="btn btn-success">signup</button>

    </form>
</div>
</div>
</body>