<% layout("/layouts/boilerplate") %>
<body>
<div class="row mt-3">
    <h1 class="col-6 offset-3">login for wanderlust</h1>
<div class="col-6 offset-3">
    <form method="POST" action="/login" class="needs-validation" novalidate>
        <div class="mb-3">
            <lable for ="username" class="username">username</lable>
            <input name="username"
            placeholder="enter username"
            id="username" 
            type="text" 
            class="form-control" required>
        </div>
        
        <div class="mb-3">
            <lable for ="password" class="password">password</lable>
            <input name="password"
            id="password" 
            type="password" 
            class="form-control" required>
        </div>

        <button class="btn btn-success">login</button>

    </form>
</div>
</div>
</body>